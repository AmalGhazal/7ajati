        <div class="form-element">
          <lable for="fullname">Full Name</lable>
          <input type="text" name="username" id="fullname" placeholder="Enter your full name" required>
        </div>
        <div class="form-element">
          <lable for="email">Email</lable>

          <input type="text" id="email" name="email" placeholder="Enter your email" required pattern="[^@\s]+@[^@\s]+" title="Invalid email address">
        </div>
        <div class="form-element">
          <lable> password
            <input type="password" id="mypassword" name="mypassword" placeholder="Type your password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain
